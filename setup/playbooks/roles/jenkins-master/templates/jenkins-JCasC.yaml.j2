jenkins:
  systemMessage: |
    TF Home <a href="https://tungsten.io/">https://tungsten.io/</a><br>
    Based on <a href="https://github.com/tungstenfabric/tf-jenkins">https://github.com/tungstenfabric/tf-jenkins</a><br><br>
    Jenkins configured automatically by Jenkins Configuration as Code plugin
  numExecutors: 2
  scmCheckoutRetryCount: 2
  mode: NORMAL
  globalNodeProperties:
  - envVars:
      env:
      - key: CI_DOMAIN
        value: "{{ ci_domain }}"
  securityRealm:
    local:
      allowsSignup: false
      users:
        - id: "{{ jenkins_default_user }}"
          password: "{{ jenkins_default_user_password }}"
  authorizationStrategy:
    globalMatrix:
      permissions:
      - "Job/Read:anonymous"
      - "Overall/Administer:authenticated"
      - "Overall/Read:anonymous"
      - "View/Read:anonymous"
  markupFormatter:
    rawHtml:
      disableSyntaxHighlighting: false
  crumbIssuer:
    standard:
      excludeClientIPFromCrumb: false
  remotingSecurity:
    enabled: true
{% if ('aws' in groups and groups['aws']) or ('vexxhost' in groups and groups['vexxhost']) or ('openstack' in groups and groups['openstack']) %}
  nodes:
{% if ('aws' in groups and groups['aws']) %}
{% for host in groups['aws'] %}
    - permanent:
        labelString: "aws"
        launcher:
          ssh:
            credentialsId: "jenkins-ssh-key"
            host: "{{ host }}"
            port: 22
            sshHostKeyVerificationStrategy: "nonVerifyingKeyVerificationStrategy"
        name: "slave-aws_{{ loop.index }}"
        numExecutors: 20
        remoteFS: "/home/jenkins"
        retentionStrategy: "always"
{% endfor %}
{% endif %}
{% if ('vexxhost' in groups and groups['vexxhost']) %}
{% for host in groups['vexxhost'] %}
    - permanent:
        labelString: "vexxhost vexx"
        launcher:
          ssh:
            credentialsId: "jenkins-ssh-key"
            host: "{{ host }}"
            port: 22
            sshHostKeyVerificationStrategy: "nonVerifyingKeyVerificationStrategy"
        name: "slave-vexxhost-{{ hostvars[host].region }}_{{ loop.index }}"
        numExecutors: "{{ hostvars[host].executors | default(20) }}"
        remoteFS: "/home/jenkins"
        retentionStrategy: "always"
        nodeProperties:
        - envVars:
            env:
            - key: "SLAVE_REGION"
              value: "{{ hostvars[host].region }}"
            - key: "OS_NETWORK"
              value: "{{ hostvars[host].default_network }}"
            - key: "OS_SG"
              value: "default"
            # - key: "RHEL_POOL_ID"
            #   value: "{{ rhel_pool_id | default('NotDefined') }}"
{% endfor %}
{% endif %}
{% if ('openstack' in groups and groups['openstack']) %}
{% for host in groups['openstack'] %}
    - permanent:
        labelString: "openstack"
        launcher:
          ssh:
            credentialsId: "jenkins-ssh-key"
            host: "{{ host }}"
            port: 22
            sshHostKeyVerificationStrategy: "nonVerifyingKeyVerificationStrategy"
        name: "slave-openstack-{{ hostvars[host].region }}_{{ loop.index }}"
        numExecutors: "{{ hostvars[host].executors | default(20) }}"
        remoteFS: "/home/jenkins"
        retentionStrategy: "always"
        nodeProperties:
        - envVars:
            env:
            # OS variables are defined in the properties of the Jenkins node
            # Region name for internal and external use in mcs is not the same
            # OS_REGION_NAME is internal and SLAVE_REGION is external
            # look more here:
            # https://mcs.mail.ru/docs/en/additionals/start/start-intro/help-glossary
            # https://mcs.mail.ru/app/<mcs project name>/project/keys/
            - key: "OS_REGION_NAME"
              value: "{{ os_region_name }}"
            - key: "SLAVE_REGION"
              value: "{{ hostvars[host].region }}"
            - key: "OS_NETWORK"
              value: "{{ hostvars[host].default_network }}"
            - key: "OS_SG"
              value: "default"
{% endfor %}
{% endif %}
{% endif %}
unclassified:
  location:
    adminAddress: "{{ jenkins_admin_email }}"
    url: "https://{{ jenkins_name }}.{{ region }}.{{ ci_domain }}/"
  shell:
    shell: "/bin/bash"
  email-ext:
    adminRequiredForTemplateTesting: false
    allowUnregisteredEnabled: false
    charset: "UTF-8"
    debugMode: false
    defaultBody: |-
      $PROJECT_NAME - Build # $BUILD_NUMBER - $BUILD_STATUS:

      Check console output at $BUILD_URL to view the results.
    defaultContentType: "text/plain"
    defaultSubject: "$PROJECT_NAME - Build # $BUILD_NUMBER - $BUILD_STATUS!"
    defaultRecipients: "{{ jenkins_admin_email }}"
    defaultReplyTo: "{{ jenkins_admin_email }}"
    defaultTriggerIds:
    - "hudson.plugins.emailext.plugins.trigger.FailureTrigger"
    mailAccount:
      smtpHost: "{{ ansible_default_ipv4.address }}"
      smtpPassword: ""
    maxAttachmentSize: -1
    maxAttachmentSizeMb: -1
    precedenceBulk: false
    watchingEnabled: false
  gerrit-trigger:
    pluginConfig:
      interestingEvents:
      - "change-abandoned"
      - "change-merged"
      - "change-restored"
      - "comment-added"
      - "patchset-created"
    servers:
    - config:
        buildCurrentPatchesOnly:
          abortManualPatchsets: true
          abortNewPatchsets: true
          abortSameTopic: false
        categories:
        - verdictDescription: "Code Review"
          verdictValue: "Code-Review"
        - verdictDescription: "Verified"
          verdictValue: "Verified"
        enableManualTrigger: false
        gerritAuthKeyFile: "/var/jenkins_home/.ssh/gerrit_rsa"
        gerritFrontEndUrl: "https://tf-gerrit.progmaticlab.com/"
        gerritHostName: "tf-gerrit.progmaticlab.com"
        gerritUserName: "tf-gerrit"
      name: "tf-gerrit.progmaticlab.com"
      noConnectionOnStartup: false
